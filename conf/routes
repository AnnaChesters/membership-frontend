# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.FrontPage.index

# Membership
GET         /become-a-member             controllers.Signup.renderTierSelection
GET         /partner-registration        controllers.Signup.renderPartnerRegistration
GET         /registration-successful     controllers.Signup.renderRegistrationSuccessful

# Join
GET         /join                        controllers.Joiner.tierList
GET         /join/:memberTier            controllers.Joiner.tier(memberTier)
GET         /join/:memberTier/payment    controllers.Joiner.payment(memberTier)
GET         /join/:memberTier/thankyou   controllers.Joiner.thankyou(memberTier)

# Events
GET         /events                      controllers.EventController.renderEventsIndex
GET         /event/:id                   controllers.EventController.renderEventPage(id)

GET         /stripe                      controllers.Subscription.stripe
POST        /stripe                      controllers.Subscription.stripeSubmit

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)
