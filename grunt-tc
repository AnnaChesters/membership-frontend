#!/bin/bash

set -o xtrace
set -o nounset
set -o errexit

JS_DIR=common/app/assets/javascripts
SCSS_DIR=common/app/assets/stylesheets

# Need node, npm, bower, karma-cli, sass installed globally

# make sure gems available in PATH
export PATH=dev/gems/bin:$PATH
bundle install --binstubs dev/gems/bin --path dev/gems

npm install

pushd $JS_DIR

bower install

popd

pushd $SCSS_DIR

bower install

popd

grunt "$@"