#!/bin/bash

set -o xtrace
set -o nounset
set -o errexit

#export PATH=dev/gems/bin:$PATH

# Need node, npm, bower, karma-cli, sass installed globally

bundle install --binstubs dev/gems/bin --path dev/gems

npm install

cd common/app/assets/javascripts

bower install

cd ../../../../

cd common/app/assets/stylesheets

bower install

cd ../../../../

grunt compile

grunt test

#grunt "$@"