# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.FrontPage.index

# Healthcheck
GET         /healthcheck                  controllers.Healthcheck.healthcheck

# Join
GET         /join                        controllers.Joiner.tierList
GET         /join/friend                 controllers.Joiner.friend
POST        /join/friend                 controllers.Joiner.joinFriend
GET         /join/partner                controllers.Joiner.partner
GET         /join/patron                 controllers.Joiner.patron
GET         /join/partner/payment        controllers.Joiner.paymentPartner
GET         /join/patron/payment         controllers.Joiner.paymentPatron
GET         /join/friend/thankyou        controllers.Joiner.thankyouFriend
GET         /join/partner/thankyou       controllers.Joiner.thankyouPartner
GET         /join/patron/thankyou        controllers.Joiner.thankyouPatron

# Subscription
POST        /subscription/subscribe      controllers.Subscription.subscribe
POST        /subscription/cancel         controllers.Subscription.cancel
POST        /subscription/update         controllers.Subscription.update

# Events
GET         /events                      controllers.Event.list
GET         /events/:tag                 controllers.Event.listFilteredBy(tag)
GET         /event/:id                   controllers.Event.details(id)
GET         /event/:id/buy               controllers.Event.buy(id)

# Tier
GET         /tier/change                 controllers.TierController.change
GET         /tier/downgrade/confirm      controllers.TierController.confirmDowngrade
POST        /tier/downgrade/confirm      controllers.TierController.downgradeTier
GET         /tier/downgrade/summary      controllers.TierController.downgradeSummary
GET         /tier/cancel/confirm         controllers.TierController.confirmCancel
POST        /tier/cancel/confirm         controllers.TierController.cancelTier
GET         /tier/cancel/summary         controllers.TierController.cancelSummary

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)

GET         /user/me                     controllers.User.me
GET         /user/me/details             controllers.User.meDetails
