# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.FrontPage.index

# Healthcheck
GET         /healthcheck                  controllers.Healthcheck.healthcheck

# Join
GET         /join                        controllers.Joiner.tierList
GET         /join/friend                 controllers.Joiner.friend
GET         /join/friend/detail          controllers.Joiner.detailFriend
POST        /join/friend/detail          controllers.Joiner.joinFriend
GET         /join/partner                controllers.Joiner.partner
GET         /join/patron                 controllers.Joiner.patron
GET         /join/partner/payment        controllers.Joiner.paymentPartner
GET         /join/patron/payment         controllers.Joiner.paymentPatron
GET         /join/friend/thankyou        controllers.Joiner.thankyouFriend
GET         /join/:tier/thankyou         controllers.Joiner.thankyouPaid(tier)

# Subscription
POST        /subscription/subscribe      controllers.Subscription.subscribe
POST        /subscription/cancel         controllers.Subscription.cancel
POST        /subscription/update         controllers.Subscription.update
POST        /subscription/event          controllers.Subscription.event(secret: String)

# Events
GET         /events                      controllers.Event.list
GET         /events/:tag                 controllers.Event.listFilteredBy(tag)
GET         /event/:id                   controllers.Event.details(id)
GET         /event/:id/buy               controllers.Event.buy(id)

# Tier
GET         /tier/change                 controllers.TierController.change

GET         /tier/cancel                 controllers.TierController.cancelTier
POST        /tier/cancel/confirm         controllers.TierController.cancelTierConfirm
GET         /tier/cancel/summary         controllers.TierController.cancelTierSummary

GET         /tier/change/friend          controllers.TierController.friendDowngrade
POST        /tier/change/friend          controllers.TierController.friendDowngradeConfirm
GET         /tier/change/friend/summary  controllers.TierController.friendDowngradeSummary

GET         /tier/change/:tier           controllers.TierController.upgrade(tier)
POST        /tier/change/:tier           controllers.TierController.upgradeConfirm(tier)
GET         /tier/change/:tier/summary   controllers.Joiner.thankyouPaid(tier)

# Information
GET         /help                        controllers.Info.help
GET         /feedback                    controllers.Info.feedback

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)

GET         /user/me                     controllers.User.me
GET         /user/me/details             controllers.User.meDetails
